doctype 5
html
	head
		link(rel='stylesheet', href='/style/style.css')
		link(rel='stylesheet', href='/javascript/jquery.miniColors.css')
		script(type="text/javascript", src="/javascript/jquery-1.8.1.min.js")
		script(type="text/javascript", src="/socket.io/socket.io.js")
		script(type="text/javascript", src="/coffee-script/player")
		script(type="text/javascript", src="/javascript/jquery.miniColors.min.js")
		title Dungeons & Dragons
	body
		#header
			h1 Willkommen Abenteurer
			form#login
				input(type="text", name="name")
				input(name="color", type="hidden")
				| 
				button(type="submit") Ins Abenteuer einsteigen 
		#playerlist
		#chat
		#input
			#dices
				- var dices = [2,3,4,6,8,10,12,20,100]
				- for (var i in dices)
					a.dice(href="#")= dices[i]
			form#say
				input(type="text", name="msg", size="140")
				| 
				button(type="submit") Senden



